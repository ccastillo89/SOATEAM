@model UPC.SisTictecks.EL.Login
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SOATEAM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                <div id="principal" class="form-horizontal">
                    <div style="width:auto; text-align:center; color:darkgray; opacity:0.9; font-family:'Lucida Sans Unicode'">
                        <h1>Sistema de Gestión de tickets</h1>
                    </div>
                    <br />
                    <h5>Iniciar Sesión</h5>
                </div>
                <br />
                <br />
                <br />
                <br />

                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <hr />
                    @*@Html.ValidationSummary(true, "No se ha podido iniciar sesion. Verifique.");*@                    
                    @Html.ValidationSummary()
                    @Html.AntiForgeryToken()


                    <div class="form-group">
                        @Html.LabelFor(u => u.Usuario, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(u => u.Usuario, new { @class = "form-control" })
                            @*@Html.ValidationMessageFor(u => u.Usuario)*@
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(u => u.Clave, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(u => u.Clave, new { @class = "form-control" })
                            @*@Html.ValidationMessageFor(u => u.Pass)*@
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @*@Html.CheckBoxFor(u => u.Recordarme)
                                @Html.LabelFor(u => u.Recordarme)*@
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ingresar" class="btn btn-default" />
                        </div>
                    </div>

                    @*<p>
                        @Html.ActionLink("Registrar", "Registrar","Usuario")
                    </p>*@
                }
            </section>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>

