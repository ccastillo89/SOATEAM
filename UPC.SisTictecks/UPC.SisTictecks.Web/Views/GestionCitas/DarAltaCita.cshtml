@model UPC.SisTictecks.EL.CitaEN

@{
    ViewBag.Title = "DarAltaCita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alta de Cita</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-horizontal">
        <h4>Cita</h4>
        <hr />
        @Html.ValidationSummary()
        @Html.HiddenFor(model => model.Codigo)
        @Html.HiddenFor(model => model.HoraFin)
        @Html.HiddenFor(model => model.RangoHora)
        @Html.HiddenFor(model => model.Vehiculo)
        @Html.HiddenFor(model => model.Usuario)
        @Html.HiddenFor(model => model.Taller)
        @Html.HiddenFor(model => model.Servicio)

        <div class="form-group">
            @Html.LabelFor(model => model.NroCita, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NroCita, new { @class = "form-control" , disabled="disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Fecha, new { @class = "form-control" , disabled="disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoraInicio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.HoraInicio, new { @class = "form-control" , disabled="disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HoraInicio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.HoraInicio, new { @class = "form-control" , disabled="disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Observacion, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Observacion, new { @class = "form-control" , disabled="disabled" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dar Alta" class="btn btn-default" />
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("ListaCitasEnAlta", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}